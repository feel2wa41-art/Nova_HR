# Nova HR Local Development Environment Variables
# 이 파일을 .env.local로 복사하여 사용하세요

# Database
DATABASE_URL="postgresql://postgres:postgres123@localhost:5432/nova_hr?schema=public"

# API Configuration
NODE_ENV=development
PORT=3000
API_BASE_URL=http://localhost:3000

# JWT Secrets (개발용 - 운영환경에서는 반드시 변경)
JWT_SECRET=nova-hr-jwt-secret-dev-2024
JWT_REFRESH_SECRET=nova-hr-refresh-secret-dev-2024
JWT_EXPIRES_IN=7d
JWT_REFRESH_EXPIRES_IN=30d

# Redis
REDIS_URL=redis://localhost:6379

# MinIO (로컬 S3 대체)
MINIO_ENDPOINT=localhost
MINIO_PORT=9000
MINIO_ACCESS_KEY=minioadmin
MINIO_SECRET_KEY=minioadmin123
MINIO_USE_SSL=false
MINIO_BUCKET_NAME=nova-hr-files

# Email (MailHog)
SMTP_HOST=localhost
SMTP_PORT=1025
SMTP_SECURE=false
SMTP_USER=
SMTP_PASS=
EMAIL_FROM=noreply@nova-hr.local

# CORS Origins
CORS_ORIGINS=http://localhost:3001,http://localhost:3003,http://localhost:3004

# Frontend URLs
HOMEPAGE_URL=http://localhost:3004
PORTAL_URL=http://localhost:3001
PROVIDER_URL=http://localhost:3003

# Desktop Agent
DESKTOP_AGENT_DOWNLOAD_URL=http://localhost:3001/downloads

# Push Notifications (Optional)
VAPID_PUBLIC_KEY=
VAPID_PRIVATE_KEY=

# Google OAuth (Optional)
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=
GOOGLE_CALLBACK_URL=http://localhost:3000/auth/google/callback

# AWS (운영환경용 - 로컬에서는 MinIO 사용)
# AWS_REGION=ap-southeast-3
# AWS_ACCESS_KEY_ID=
# AWS_SECRET_ACCESS_KEY=
