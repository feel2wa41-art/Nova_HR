{
  "name": "nova-hr",
  "version": "1.0.0",
  "description": "Nova HR - Integrated HR Management System",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev": "pnpm run --parallel dev",
    "dev:local": "NODE_ENV=development pnpm run --parallel dev",
    "dev:api": "pnpm --filter api dev",
    "dev:web": "pnpm run --parallel --filter \"web-*\" dev",
    "dev:mobile": "pnpm --filter mobile-app dev",
    "dev:desktop": "pnpm --filter desktop-agent dev",
    "start:local": "pnpm docker:up && pnpm dev",
    "start:local:clean": "pnpm docker:down && pnpm docker:up && pnpm migrate:dev && pnpm db:seed && pnpm dev",
    "build": "pnpm run --recursive build",
    "build:dev": "NODE_ENV=development pnpm run --recursive build",
    "build:prod": "NODE_ENV=production pnpm run --recursive build",
    "build:api": "pnpm --filter api build",
    "build:web": "pnpm run --parallel --filter \"web-*\" build",
    "build:web:dev": "NODE_ENV=development pnpm run --parallel --filter \"web-*\" build",
    "build:web:prod": "NODE_ENV=production pnpm run --parallel --filter \"web-*\" build",
    "build:mobile": "pnpm --filter mobile-app build",
    "build:desktop": "pnpm --filter desktop-agent build",
    "test": "pnpm run --recursive test",
    "test:unit": "pnpm run --recursive test:unit",
    "test:e2e": "pnpm run --recursive test:e2e",
    "lint": "pnpm run --recursive lint",
    "lint:fix": "pnpm run --recursive lint:fix",
    "typecheck": "pnpm run --recursive typecheck",
    "format": "prettier --write \"**/*.{js,jsx,ts,tsx,json,md}\"",
    "clean": "pnpm run --recursive clean && rm -rf node_modules",
    "migrate:dev": "pnpm --filter api migrate:dev",
    "migrate:deploy": "pnpm --filter api migrate:deploy",
    "db:seed": "pnpm --filter api db:seed",
    "docker:up": "docker compose -f infra/docker/docker-compose.yml up -d",
    "docker:down": "docker compose -f infra/docker/docker-compose.yml down",
    "docker:logs": "docker compose -f infra/docker/docker-compose.yml logs -f",
    "deploy:dev": "pnpm build:dev && pnpm deploy:aws:dev",
    "deploy:prod": "pnpm build:prod && pnpm deploy:aws:prod",
    "deploy:aws:dev": "aws s3 sync apps/web-customer-portal/dist s3://nova-hr-portal-dev --region ap-southeast-3 --profile hr_tank",
    "deploy:aws:prod": "aws s3 sync apps/web-customer-portal/dist s3://nova-hr-portal-prod --region ap-southeast-3 --profile hr_tank",
    "deploy:desktop:dev": "aws s3 cp apps/desktop-agent/release/ s3://nova-hr-desktop-agent-dev --recursive --region ap-southeast-3 --profile hr_tank",
    "deploy:desktop:prod": "aws s3 cp apps/desktop-agent/release/ s3://nova-hr-desktop-agent-prod --recursive --region ap-southeast-3 --profile hr_tank"
  },
  "devDependencies": {
    "@types/node": "^20.14.10",
    "prettier": "^3.3.3",
    "tsx": "^4.16.2",
    "typescript": "^5.5.3",
    "rimraf": "^5.0.5",
    "mkdirp": "^3.0.1",
    "cross-env": "^7.0.3"
  },
  "engines": {
    "node": ">=18.0.0",
    "pnpm": ">=8.0.0"
  },
  "packageManager": "pnpm@8.15.6",
  "dependencies": {
    "@typescript-eslint/eslint-plugin": "^7.16.0",
    "@typescript-eslint/parser": "^7.16.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.1.3",
    "eslint-plugin-react": "^7.34.3",
    "eslint-plugin-react-hooks": "^4.6.2"
  }
}