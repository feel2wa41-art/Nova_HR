# Reko HR API - Production Environment

# Database (RDS Production)
DATABASE_URL="postgresql://hradmin:PRODUCTION_PASSWORD_HERE@reko-hr-db-prod.ap-southeast-3.rds.amazonaws.com:5432/postgres"

# JWT Configuration
JWT_SECRET="reko-hr-production-jwt-secret-very-secure-key-2024"
JWT_EXPIRES_IN="8h"
JWT_REFRESH_EXPIRES_IN="30d"

# API Configuration
NODE_ENV="production"
PORT=3000
API_BASE_URL="https://api.reko-hr.com"

# CORS Origins (Production domains)
CORS_ORIGINS="https://www.reko-hr.com,https://portal.reko-hr.com,https://provider.reko-hr.com"

# File Storage (S3 Production)
AWS_REGION="ap-southeast-3"
AWS_S3_BUCKET="nova-hr-homepage"
AWS_S3_FILES_BUCKET="reko-hr-files"
AWS_S3_ENDPOINT=""
AWS_ACCESS_KEY_ID="" # Will be set via ECS task role
AWS_SECRET_ACCESS_KEY="" # Will be set via ECS task role

# File Serving URLs
FILES_BASE_URL="https://files.reko-hr.com"
HOMEPAGE_ASSETS_URL="https://www.reko-hr.com"

# Domain Configuration
HOMEPAGE_DOMAIN="www.reko-hr.com"
PORTAL_DOMAIN="portal.reko-hr.com"
PROVIDER_DOMAIN="provider.reko-hr.com"
API_DOMAIN="api.reko-hr.com"
FILES_DOMAIN="files.reko-hr.com"

# Email Configuration (SES Production)
SMTP_HOST="email-smtp.ap-southeast-3.amazonaws.com"
SMTP_PORT="587"
SMTP_SECURE="true"
SMTP_USER="" # SES SMTP credentials
SMTP_PASS="" # SES SMTP credentials
MAIL_FROM="noreply@reko-hr.com"

# Redis Configuration (ElastiCache Production)
REDIS_URL="redis://reko-hr-redis-prod.cache.amazonaws.com:6379"

# Rate Limiting (More restrictive for production)
THROTTLE_TTL=60
THROTTLE_LIMIT=30

# Logging
LOG_LEVEL="warn"

# App Settings
APP_NAME="Reko HR"
APP_VERSION="1.0.0"
DEFAULT_TIMEZONE="UTC"
DEFAULT_LOCALE="en-US"

# Desktop Agent
DESKTOP_AGENT_DOWNLOAD_URL="https://files.reko-hr.com/downloads"

# Production Features (Disabled for security)
ENABLE_SWAGGER="false"
ENABLE_PLAYGROUND="false" 
DEBUG_MODE="false"

# Security Headers
HELMET_CSP_ENABLED="true"
SECURITY_HEADERS_ENABLED="true"