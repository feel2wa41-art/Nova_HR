{
  "name": "@nova-hr/desktop-agent",
  "version": "1.0.0",
  "description": "Reko HR Desktop Agent for employee monitoring and productivity tracking",
  "main": "dist-electron/index.js",
  "private": true,
  "author": "Reko HR Team",
  "scripts": {
    "dev": "vite",
    "dev:local": "cross-env NODE_ENV=development API_URL=http://localhost:3000 vite",
    "dev:server": "cross-env NODE_ENV=development API_URL=https://api.reko-hr.com vite",
    "build": "vite build && electron-builder",
    "build:local": "cross-env NODE_ENV=production API_URL=http://localhost:3000 vite build && electron-builder",
    "build:server": "cross-env NODE_ENV=production API_URL=https://api.reko-hr.com vite build && electron-builder",
    "build:dev": "vite build",
    "build:electron": "electron-builder",
    "build:win": "vite build && electron-builder --win",
    "build:win:local": "cross-env NODE_ENV=production API_URL=http://localhost:3000 vite build && electron-builder --win --x64",
    "build:win:server": "cross-env NODE_ENV=production API_URL=https://api.reko-hr.com vite build && electron-builder --win --x64",
    "prebuild": "echo \"Skipping typecheck for build\"",
    "prebuild:win": "echo \"Skipping typecheck for build\"",
    "build:mac": "vite build && electron-builder --mac",
    "build:mac:local": "cross-env API_URL=http://localhost:3000 vite build && electron-builder --mac",
    "build:mac:server": "cross-env API_URL=https://api.reko-hr.com vite build && electron-builder --mac",
    "build:linux": "vite build && electron-builder --linux",
    "build:production": "npm run build:server",
    "build:auto": "node scripts/build.js",
    "build:auto:win": "node scripts/build.js --win",
    "build:auto:mac": "node scripts/build.js --mac",
    "build:auto:linux": "node scripts/build.js --linux",
    "clean": "rimraf dist dist-electron release",
    "clean:all": "rimraf dist dist-electron release node_modules package-lock.json",
    "preview": "vite preview",
    "pree2e": "vite build --mode=test",
    "e2e": "playwright test",
    "electron": "wait-on tcp:5173 && cross-env NODE_ENV=development electron .",
    "electron:local": "wait-on tcp:5173 && cross-env NODE_ENV=development API_URL=http://localhost:3000 electron .",
    "electron:server": "wait-on tcp:5173 && cross-env NODE_ENV=development API_URL=https://api.reko-hr.com electron .",
    "electron:serve": "concurrently -k \"npm run dev\" \"npm run electron\"",
    "electron:serve:local": "concurrently -k \"npm run dev:local\" \"npm run electron:local\"",
    "electron:serve:server": "concurrently -k \"npm run dev:server\" \"npm run electron:server\"",
    "electron:pack": "electron-builder --dir",
    "start": "npm run electron:serve:local",
    "start:local": "npm run electron:serve:local",
    "start:server": "npm run electron:serve:server",
    "test": "jest",
    "lint": "eslint . --ext .js,.jsx,.cjs,.mjs,.ts,.tsx,.cts,.mts --fix --ignore-path .gitignore",
    "typecheck": "tsc --noEmit"
  },
  "dependencies": {
    "@electron-toolkit/utils": "^3.0.0",
    "auto-launch": "^5.0.6",
    "axios": "^1.7.7",
    "electron-store": "^10.0.0",
    "electron-updater": "^6.2.1",
    "node-cron": "^3.0.3",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-router-dom": "^6.26.2",
    "systeminformation": "^5.22.11"
  },
  "devDependencies": {
    "@electron-toolkit/preload": "^3.0.2",
    "@types/node": "^20.16.5",
    "@types/react": "^18.3.5",
    "@types/react-dom": "^18.3.0",
    "@typescript-eslint/eslint-plugin": "^7.18.0",
    "@typescript-eslint/parser": "^7.18.0",
    "@vitejs/plugin-react": "^4.3.1",
    "concurrently": "^8.2.2",
    "cross-env": "^7.0.3",
    "electron": "^32.0.1",
    "electron-builder": "^24.13.3",
    "electron-devtools-installer": "^3.2.0",
    "electron-rebuild": "^3.2.9",
    "eslint": "^8.57.0",
    "rimraf": "^5.0.5",
    "typescript": "^5.5.4",
    "vite": "^5.4.3",
    "vite-plugin-electron": "^0.28.0",
    "vite-plugin-electron-renderer": "^0.14.5",
    "wait-on": "^7.2.0"
  },
  "build": {
    "appId": "com.nova-hr.desktop-agent",
    "productName": "Reko HR Desktop Agent",
    "artifactName": "${productName}-${version}-${os}-${arch}.${ext}",
    "copyright": "Copyright Â© 2024 Reko HR Team",
    "directories": {
      "output": "release"
    },
    "files": [
      "dist-electron",
      "dist",
      "node_modules",
      "src/logo",
      "!**/.vscode/*",
      "!src/*",
      "!electron.vite.config.{js,ts,mjs,cjs}",
      "!{.eslintignore,.eslintrc.cjs,.prettierignore,.prettierrc.yaml,dev-app-update.yml,CHANGELOG.md,README.md}"
    ],
    "extraResources": [
      {
        "from": "src/logo",
        "to": "logo"
      }
    ],
    "asarUnpack": [
      "node_modules/systeminformation/**/*"
    ],
    "nodeGypRebuild": false,
    "buildDependenciesFromSource": false,
    "npmRebuild": false,
    "mac": {
      "icon": "src/logo/logo.png",
      "target": [
        {
          "target": "dmg",
          "arch": [
            "x64",
            "arm64"
          ]
        }
      ]
    },
    "win": {
      "icon": "src/logo/sprout_icon.ico",
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        }
      ]
    },
    "linux": {
      "icon": "src/logo/logo.png",
      "target": [
        {
          "target": "AppImage",
          "arch": [
            "x64"
          ]
        }
      ]
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "allowElevation": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "installerIcon": "src/logo/sprout_icon.ico",
      "uninstallerIcon": "src/logo/sprout_icon.ico",
      "installerHeaderIcon": "src/logo/sprout_icon.ico",
      "deleteAppDataOnUninstall": true,
      "runAfterFinish": true,
      "menuCategory": true,
      "shortcutName": "Reko HR Desktop Agent"
    },
    "publish": [
      {
        "provider": "github",
        "owner": "reko-hr",
        "repo": "desktop-agent"
      }
    ]
  }
}