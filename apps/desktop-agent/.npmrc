# Node.js and Electron configuration
target_platform=win32
target_arch=x64
runtime=electron
disturl=https://electronjs.org/headers
cache=${APPDATA}/npm-cache
build_from_source=true

# Native module configuration
node_gyp_force_rebuild=true
msvs_version=2019

# Python configuration for node-gyp
python=python3

# Electron rebuild configuration
electron_rebuild=true
electron_prebuilt_cache_path=${APPDATA}/electron

# Registry and download settings
registry=https://registry.npmjs.org/
prefer-online=true
audit=false
fund=false

# Build optimization
jobs=max